@page
@model Lesson_1.Pages.Lesson1.Task5Model
@{
	ViewData["Title"] = "Task5";
}

@if (Model.isSubmitted)
{
	<h3>Дякуємо, @Model.Contact.Name! Ваше повідомлення надіслано.</h3>
}

<form method="post">
	<div>
		<label for="name">Ім’я:</label>
		<input asp-for="Contact.Name" id="name" required />
	</div>
	<div>
		<label for="email">Email:</label>
		<input asp-for="Contact.Email" id="email" type="email" required />
	</div>
	<div>
		<label for="message">Повідомлення:</label>
		<textarea asp-for="Contact.Message" id="message" rows="4" required></textarea>
	</div>

	<button type="submit">Надіслати</button>
</form>
